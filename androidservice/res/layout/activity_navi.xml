<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@drawable/background2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
         android:background="#22000000"
         >
        
          <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dip"
            android:layout_height="40dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dip"
            android:src="@drawable/buddy_10" >
          </ImageView>
        <TextView
            android:id="@+id/idTextView"
            android:layout_height="wrap_content"
            android:layout_width="150dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
             android:layout_below="@+id/imageView"
            android:textColor="#FFFFFFFF"
            >
        </TextView>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_height="wrap_content"
            android:layout_width="150dip"
            android:textColor="#FFFFFFFF"
             android:layout_centerHorizontal="true"
            android:layout_below="@+id/idTextView"
             >
        </TextView>
        
        <TextView
            android:id="@+id/balanceTextView"
           android:layout_width="150dip"
           android:textColor="#FFFFFFFF"
            android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
            android:layout_below="@+id/nameTextView" >
         </TextView>   

        <Button
            android:id="@+id/personButton"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dip"
            android:background="#00000000"
          android:textColor="#FFFFFFFF"
            android:textSize="15sp"
             android:text="个人设置"
             >
        </Button>

      	<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#22000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >
            
      	    <Button
      	        android:id="@+id/payButton"
      	        android:layout_width="100dip"
      	        android:layout_height="wrap_content"
      	        android:layout_marginLeft="2dip"
      	        android:layout_toLeftOf="@+id/rechargeButton"
      	        android:background="#00000000"
      	        android:textColor="#FFFFFF"
      	        android:text="付  款" />
      	    
      	    <Button
      	        android:id="@+id/rechargeButton"
      	        android:layout_width="110dip"
      	        android:layout_height="wrap_content"
      	        android:background="#00000000"
      	        android:layout_centerHorizontal="true"
      	        android:layout_centerVertical="true"
      	        android:text="充  值"
      	        android:textColor="#FFFFFF" />

      	    <Button
      	        android:id="@+id/withdrawButton"
      	        android:layout_width="100dip"
      	        android:layout_height="wrap_content"
      	        android:layout_toRightOf="@+id/rechargeButton"
      	        android:background="#00000000"
      	        android:text="提  现"
      	        android:textColor="#FFFFFF" />

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/orderlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </ListView>

</LinearLayout>